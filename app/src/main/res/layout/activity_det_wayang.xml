<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- ImageView untuk Foto Wayang -->
    <ImageView
        android:id="@+id/ivFoto"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:contentDescription="Foto Wayang"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_launcher_background" />

    <!-- TextView untuk Nama Wayang -->
    <TextView
        android:id="@+id/tvNama"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Nama Wayang"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="#000000" />

    <!-- TextView untuk Detail Wayang -->
    <TextView
        android:id="@+id/tvDetail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Deskripsi lengkap tentang wayang akan ditampilkan di sini."
        android:textSize="16sp"
        android:textColor="#000000" />

</LinearLayout>
